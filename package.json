{
  "name": "project-42",
  "version": "1.0.0",
  "private": true,
  "description": "Project 42: Galion Initiative & The Machine - Building safe AGI and caring AI for humanity",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "next dev",
    "dev:all": "npm run dev --workspaces --if-present",
    "dev:machine": "npm run dev -w apps/the-machine",
    "dev:torchbearer": "npm run dev -w apps/torchbearer",
    "build": "next build",
    "build:all": "npm run build --workspaces --if-present",
    "build:machine": "npm run build -w apps/the-machine",
    "build:torchbearer": "npm run build -w apps/torchbearer",
    "lint": "next lint",
    "clean": "rimraf **/node_modules **/.next **/out **/.turbo"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/galion-initiative/project-42"
  },
  "keywords": [
    "ai",
    "agi",
    "asi",
    "artificial-superintelligence",
    "safety",
    "transparency",
    "nonprofit",
    "galion-initiative",
    "the-machine",
    "project-42"
  ],
  "author": "The Galion Initiative",
  "license": "MIT",
  "dependencies": {
    "pdfjs-dist": "^5.4.530",
    "react-pdf": "^10.2.0"
  }
}
